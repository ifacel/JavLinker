{
  "scripts": {
    "dev": "npm run dev:chrome",
    "dev:chrome": "vite --mode chrome",
    "dev:firefox": "vite --mode firefox",
    "predev:chrome": "node build_scripts/prebuild.js",
    "predev:firefox": "node build_scripts/prebuild.js",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "prebuild:chrome": "node build_scripts/prebuild.js",
    "prebuild:firefox": "node build_scripts/prebuild.js",
    "postbuild:chrome": "node build_scripts/postbuild.js",
    "postbuild:firefox": "node build_scripts/postbuild.js",
    "build": "npm run build:chrome && npm run build:firefox"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "web-ext": "^9.2.0"
  }
}
