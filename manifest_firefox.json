{
  "manifest_version": 3,
  "name": "Jav Linker",
  "description": "把Jav网站连接起来！",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup/settings.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": [
        "https://www.javbus.com/*",
        "https://www.seejav.me/*",
        "https://www.javlibrary.com/*",
        "https://www.y78k.com/*",
        "https://javdb.com/v/*",
        "https://www.njav.com/*",
        "https://supjav.com/*",
        "https://japanhub.net/*",
        "https://jable.tv/*",
        "https://123av.com/*",
        "https://www4.javhdporn.net/*"
      ]
    }
  ],
  "permissions": ["cookies", "storage", "tabs"],
  "host_permissions": ["https://*/"],
  "background": {
    "scripts": ["src/background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "veckdev@gmail.com"
    }
  }
}
